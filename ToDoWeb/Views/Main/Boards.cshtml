                // Drag & Drop İşlevselliği
        document.addEventListener("DOMContentLoaded", function () {
            // ... (Mevcut kodlar aynı kalacak)

            // Drag & Drop'u başlat
            initializeDragAndDrop();
        });

        function initializeDragAndDrop() {
            const taskCards = document.querySelectorAll('.task-card');
            const columns = document.querySelectorAll('.task-list');

            // Task kartlarını sürüklenebilir yap
            taskCards.forEach(card => {
                card.setAttribute('draggable', 'true');

                card.addEventListener('dragstart', function(e) {
                    e.dataTransfer.effectAllowed = 'move';
                    e.dataTransfer.setData('text/html', this.innerHTML);
                    e.dataTransfer.setData('TaskItemId', this.dataset.taskId);
                    this.classList.add('dragging');
                });

                card.addEventListener('dragend', function(e) {
                    this.classList.remove('dragging');
                });
            });

            // Column'ları drop zone yap
            columns.forEach(column => {
                column.addEventListener('dragover', function(e) {
                    e.preventDefault();
                    e.dataTransfer.dropEffect = 'move';

                    const afterElement = getDragAfterElement(column, e.clientY);
                    const dragging = document.querySelector('.dragging');

                    if (afterElement == null) {
                        column.appendChild(dragging);
                    } else {
                        column.insertBefore(dragging, afterElement);
                    }
                });

                column.addEventListener('drop', function(e) {
                    e.preventDefault();
                    const taskId = e.dataTransfer.getData('TaskItemId');
                    const newStatus = this.closest('.kanban-column').dataset.status;

                    // Backend'e status güncellemesi gönder
                    updateTaskStatus(taskId, newStatus);
                });
            });
        }

        function getDragAfterElement(container, y) {
            const draggableElements = [...container.querySelectorAll('.task-card:not(.dragging)')];

            return draggableElements.reduce((closest, child) => {
                const box = child.getBoundingClientRect();
                const offset = y - box.top - box.height / 2;

                if (offset < 0 && offset > closest.offset) {
                    return { offset: offset, element: child };
                } else {
                    return closest;
                }
            }, { offset: Number.NEGATIVE_INFINITY }).element;
        }

        function updateTaskStatus(taskId, newStatus) {
            fetch('/Task/UpdateTaskStatus', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    TaskItemId: parseInt(taskId),
                    newStatus: newStatus
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.isSuccess) {
                    // Badge sayılarını güncelle
                    updateColumnBadges();
                    toastr.success(data.message);
                } else {
                    toastr.error(data.message);
                    // Hata durumunda sayfayı yenile
                    location.reload();
                }
            })
            .catch(error => {
                console.error('Error:', error);
                toastr.error('An error occurred while updating task status');
                location.reload();
            });
        }

               function updateColumnBadges() {
            document.querySelectorAll('.kanban-column').forEach(column => {
                const badge = column.querySelector('.column-badge');
                const taskCount = column.querySelectorAll('.task-list .task-card').length;
                badge.textContent = taskCount;
            });
        }

                 
                   

