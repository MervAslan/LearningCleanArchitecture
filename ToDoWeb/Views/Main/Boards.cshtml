
@model ToDo.Application.DTOs.UserDto

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - ToDoApp</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="~/css/boards.css">
</head>
<body>
    <div class="animated-bg"></div>
    <button class="mobile-menu-toggle" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </button>
    @await Html.PartialAsync("_Notification")

    <div class="dashboard-layout">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-brand">
                <i class="fas fa-check-circle brand-icon"></i>
                <span class="brand-name">ToDoApp</span>
            </div>

            <div class="sidebar-section">
                <h3 class="section-title">Navigation</h3>
               
                    <ul class="category-list">
                        <li class="category-item">
                             <a asp-controller="Main" asp-action="Dashboard" class="category-link active">
                                <div class="category-info">
                                    <i class="fas fa-home"></i>
                                    <span>Dashboard</span>
                                </div>
                             </a>
                        </li>
                    </ul>
                </a>
            </div>

            <div class="sidebar-section">
                <h3 class="section-title">Categories</h3>
                <ul class="category-list">
                    @foreach (var category in Model.Categories)
                    {
                        <li class="category-item">
                            <a asp-action="Boards" asp-controller="Main" asp-route-categoryId="@category.Id" class="category-link">
                                
                                <div class="category-info">
                                    <span class="category-icon" style="background: #667eea;"></span>
                                    <span>@category.Name</span>
                                </div>
                                <div class="category-right">
                                    <span class="category-count">@category.Boards.Count</span>
                                    <button class="category-menu-btn" onclick="toggleDropdown(event,'category', @category.Id)">⋮</button>
                                </div>
                            </a>
                            <div class="category-dropdown" id="dropdown-category-@category.Id">
                                <button class="dropdown-item" onclick="editCategory(@category.Id, '@category.Name')">
                                    <i class="fa fa-pencil"></i>
                                    <span>Edit</span>
                                </button>
                                <div class="dropdown-divider"></div>
                                <button class="dropdown-item delete" onclick="deleteCategory(@category.Id, '@category.Name')">
                                    <i class="fa fa-trash"></i>
                                    <span>Delete</span>
                                </button>
                            </div>
                        </li>
                    }
                </ul>
            </div>
            <button type="button" class="btn add-category-btn" onclick="openCategoryModal()"><i class="fas fa-plus"></i>New Category</button>

            <div class="sidebar-section">
                <h3 class="section-title">Quick Actions</h3>
                <form asp-action="Logout" asp-controller="Account" method="post">
                    <button class="btn add-category-btn" style="margin-top: 0;"><i class="fa fa-sign-out "></i>Logout</button>
                </form>
            </div>

            <div class="user-profile">
                <div class="user-avatar">@Model.Username.Substring(0, 2).ToUpper()</div>
                <div class="user-info">
                    <h4>@Model.Username</h4>
                    <p>@Model.Email</p>
                </div>
            </div>
        </aside>
       

        <!-- Main Content -->
        <main class="main-content">
            @{
                
                int? requestedCategoryId = ViewBag.CategoryId as int?;
                int? requestedBoardId = ViewBag.BoardId as int?;

                
                var selectedCategory = requestedCategoryId.HasValue
                    ? Model.Categories.FirstOrDefault(c => c.Id == requestedCategoryId.Value)
                    : null;
                selectedCategory ??= Model.Categories.FirstOrDefault();

                
                var selectedBoard = (selectedCategory != null)
                    ? (requestedBoardId.HasValue ? selectedCategory.Boards.FirstOrDefault(b => b.Id == requestedBoardId.Value) : null)
                    : null;
                selectedBoard ??= selectedCategory?.Boards.FirstOrDefault();
            }

            @if (selectedCategory != null)
            {
                <!-- Header - Her zaman göster -->
                <header class="dashboard-header">
                    <div class="header-left">
                        @if (selectedCategory.Boards.Any())
                        {
                            <h1> @selectedCategory.Name Category - @selectedBoard?.Title Board</h1>
                        }
                        else
                        {
                            <h1>@selectedCategory.Name</h1>
                            <p style="color: #94a3b8; margin-top: 0.5rem;">No boards yet. Create your first board!</p>
                        }
                    </div>
                   


                    <div class="header-right">
                        <button class="btn btn-primary" onclick="createTask(@selectedBoard?.Id)"><i class="fas fa-plus"></i> New Task </button>
                        <button class="btn btn-primary" onclick="openBoardModal(@selectedCategory.Id)"><i class="fas fa-plus"></i> New Board </button>
                    </div>

                </header>
                 
               

                @if (selectedCategory.Boards.Any())
                {
                    

                        <!-- Kanban Board -->
                        <div class="kanban-board">
                        <!-- To Do Column -->
                        <div class="kanban-column" data-status="ToDo">
                            <div class="column-header">
                                <div class="column-title">
                                    <h3>To Do</h3>
                                    <span class="column-badge">@selectedBoard.Tasks.Count(t => t.Status.Equals("ToDo"))</span>
                                </div>
                            </div>

                            <div class="task-list">
                                @foreach (var task in selectedBoard.Tasks.Where(t => t.Status.Equals("ToDo")))
                                {
                                    <div class="task-card" data-task-id="@task.Id">
                                        <div class="task-header">
                                            <span class="task-priority priority-high"></span>
                                            <button class="task-menu" onclick="toggleDropdown(event,'task', @task.Id)"><i class="fas fa-ellipsis-h"></i></button>
                                            <div class="category-dropdown" id="dropdown-task-@task.Id">
                                                <button class="dropdown-item" onclick="editTask(@task.Id, '@task.Title', '@task.Description', '@task.Tag')">
                                                    <i class="fa fa-pencil"></i>
                                                    <span>Edit</span>
                                                </button>
                                                <div class="dropdown-divider"></div>
                                                <button class="dropdown-item delete" onclick="deleteTask(@task.Id, '@task.Title', '@task.Description', '@task.Tag')">
                                                    <i class="fa fa-trash"></i>
                                                    <span>Delete</span>
                                                </button>
                                            </div>
                                        </div>
                                        <h4 class="task-title">@task.Title</h4>
                                        <p class="task-description">@task.Description</p>
                                        <div class="task-footer">
                                            <div class="task-tags">
                                                @if (!string.IsNullOrEmpty(task.Tag))
                                                {
                                                    <span class="task-tag">@task.Tag</span>
                                                }
                                            </div>
                                            <div class="task-meta">
                                                @if (task.DueDate.HasValue)
                                                {
                                                    <span><i class="far fa-calendar"></i> @task.DueDate.Value.ToString("MMM dd")</span>
                                                }
                                                <div class="task-assignee">@Model.Username.Substring(0, 2).ToUpper()</div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- In Progress Column -->
                        <div class="kanban-column" data-status="InProgress">
                            <div class="column-header">
                                <div class="column-title">
                                    <h3>In Progress</h3>
                                    <span class="column-badge">@selectedBoard.Tasks.Count(t => t.Status.Equals("InProgress"))</span>
                                </div>
                            </div>

                            <div class="task-list">
                                @foreach (var task in selectedBoard.Tasks.Where(t => t.Status.Equals("InProgress")))
                                {
                                    <div class="task-card" data-task-id="@task.Id">
                                        <div class="task-header">
                                            <span class="task-priority priority-high"></span>
                                            <button class="task-menu"><i class="fas fa-ellipsis-h"></i></button>
                                        </div>
                                        <h4 class="task-title">@task.Title</h4>
                                        <p class="task-description">@task.Description</p>
                                        <div class="task-footer">
                                            <div class="task-tags">
                                                @if (!string.IsNullOrEmpty(task.Tag))
                                                {
                                                    <span class="task-tag">@task.Tag</span>
                                                }
                                            </div>
                                            <div class="task-meta">
                                                @if (task.DueDate.HasValue)
                                                {
                                                    <span><i class="far fa-calendar"></i> @task.DueDate.Value.ToString("MMM dd")</span>
                                                }
                                                <div class="task-assignee">@Model.Username.Substring(0, 2).ToUpper()</div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Completed Column -->
                        <div class="kanban-column" data-status="Completed">
                            <div class="column-header">
                                <div class="column-title">
                                    <h3>Completed</h3>
                                    <span class="column-badge">@selectedBoard.Tasks.Count(t => t.Status.Equals("Completed"))</span>
                                </div>
                            </div>

                            <div class="task-list">
                                @foreach (var task in selectedBoard.Tasks.Where(t => t.Status.Equals("Completed")))
                                {
                                    <div class="task-card" data-task-id="@task.Id">
                                        <div class="task-header">
                                            <span class="task-priority priority-low"></span>
                                            <button class="task-menu"><i class="fas fa-ellipsis-h"></i></button>
                                        </div>
                                        <h4 class="task-title">@task.Title</h4>
                                        <p class="task-description">@task.Description</p>
                                        <div class="task-footer">
                                            <div class="task-tags">
                                                @if (!string.IsNullOrEmpty(task.Tag))
                                                {
                                                    <span class="task-tag">@task.Tag</span>
                                                }
                                            </div>
                                            <div class="task-meta">
                                                @if (task.DueDate.HasValue)
                                                {
                                                    <span><i class="far fa-calendar"></i> @task.DueDate.Value.ToString("MMM dd")</span>
                                                }
                                                <div class="task-assignee">@Model.Username.Substring(0, 2).ToUpper()</div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        </div>
                    
                }
                else
                {
                    <!-- Boş durum mesajı -->
                    <div style="text-align: center; padding: 4rem 2rem; color: #94a3b8;">
                        <i class="fas fa-folder-open" style="font-size: 4rem; margin-bottom: 1rem; opacity: 0.5;"></i>
                        <h3 style="margin-bottom: 0.5rem;">No boards in this category</h3>
                        <p>Click "New Board" to create your first board</p>
                    </div>
                }
               
           
            }
        </main>
        <!--board sidebarı-->

            <aside class="board-sidebar">
                <div class="sidebar-brand brand-icon">
                    <i class="fa-solid fa-list"></i>
                    <span class="brand-name">Created Boards</span>
                </div>
                <div class="sidebar-section">
                    <h3 class="section-title">Boards</h3>
                    <ul class="board-list">

                        @foreach (var board in selectedCategory.Boards)
                        {
                            <li class="board-item">
                                <a asp-action="Boards" asp-controller="Main" asp-route-categoryId="@selectedCategory.Id" asp-route-boardId="@board.Id" class="board-link">
                                    <div class="board-info">
                                        <span class="board-icon" style="background: #667eea;"></span>
                                        <span>@board.Title</span>
                                    </div>
                                    <div class="category-right">
                                        <span class="category-count">@board.Tasks.Count</span>
                                        <button class="category-menu-btn" onclick="toggleDropdown(event,'board',@board.Id)">⋮</button>
                                    </div>

                                </a>
                                <div class="category-dropdown" id="dropdown-board-@board.Id">
                                    <button class="dropdown-item" onclick="editBoard(@board.Id, '@board.Title')">
                                        <i class="fa fa-pencil"></i>
                                        <span>Edit</span>
                                    </button>
                                    <div class="dropdown-divider"></div>
                                    <button class="dropdown-item delete" onclick="deleteBoard(@board.Id, '@board.Title')">
                                        <i class="fa fa-trash"></i>
                                        <span>Delete</span>
                                    </button>
                                </div>
                            </li>
                        }


                    </ul>
                </div>
            </aside>
    </div>

    <!-- Category Create Pop-up -->
    <div id="categoryModal" class="modal-backdrop" aria-hidden="true">
        <div class="modal">
            <div class="modal-header">
                <h3>New Category</h3>
                <button class="modal-close" aria-label="Close" onclick="closeModal('categoryModal')">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <form asp-controller="Category" asp-action="Create" method="post" class="modal-body">
                <div class="form-group">
                    <label for="CategoryName">Category Name</label>
                    <input id="CategoryName" name="Name" type="text" placeholder="Example: Personal, Work, School..." required />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="closeModal('categoryModal')">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check"></i> Create
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Category Edit Pop-up -->
    <div id="editModal" class="modal-backdrop" aria-hidden="true">
        <div class="modal">
            <div class="modal-header">
                <h3>Edit Category</h3>
                <button class="modal-close" aria-label="Close" onclick="closeModal('editModal')">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <form asp-controller="Category" asp-action="Update" method="post" class="modal-body">
                <input type="hidden" id="EditCategoryId" name="CategoryId" value="" />
                <div class="form-group">
                    <label for="EditCategoryName">New Category Name</label>
                    <input id="EditCategoryName" name="NewCategoryName" type="text" placeholder="Example: Personal, Work, School..." required />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="closeModal('editModal')">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check"></i> Update
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Category Delete Pop-up -->
    <div id="deleteModal" class="modal-backdrop" aria-hidden="true">
        <div class="modal">
            <div class="modal-header">
                <h3>Delete Category</h3>
                <button class="modal-close" aria-label="Close" onclick="closeModal('deleteModal')">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <form asp-controller="Category" asp-action="Delete" method="post" class="modal-body">
                <input type="hidden" id="DeleteCategoryId" name="CategoryId" value="" />
                <div class="form-group">
                    <label for="DeleteCategoryName">Category Name</label>
                    <input id="DeleteCategoryName" name="CategoryName" type="text" readonly />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="closeModal('deleteModal')">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check"></i> Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
      <!-- Board Create Pop-up -->
            <div id="boardCreateModal" class="modal-backdrop" aria-hidden="true">
                <div class="modal">
                    <div class="modal-header">
                        <h3>New Board</h3>
                        <button class="modal-close" aria-label="Close" onclick="closeModal('boardCreateModal')">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>

                    <form asp-controller="Board" asp-action="CreateBoard"  method="post" class="modal-body">
                        <input type="hidden" id="CategoryId" name="CategoryId" value="" />
                        <div class="form-group">
                            <label for="BoardName">Board Name</label>
                            <input id="BoardName" name="Title" type="text" placeholder="Example: Board1, Board2, Board3..." required />
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" onclick="closeModal('boardCreateModal')">Cancel</button>
                            
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-check"></i> Create
                            </button>
                        </div>
                    </form>
                </div>
            </div>

    <!-- Board Delete Pop-up -->
    <div id="boardDeleteModal" class="modal-backdrop" aria-hidden="true">
        <div class="modal">
            <div class="modal-header">
                <h3>Delete Board</h3>
                <button class="modal-close" aria-label="Close" onclick="closeModal('boardDeleteModal')">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <form asp-controller="Board" asp-action="DeleteBoard" method="post" class="modal-body">
                <input type="hidden" id="DeleteBoardId" name="BoardId" value="" />
                <div class="form-group">
                    <label for="DeleteBoardName">Board Name</label>
                    <input id="DeleteBoardName" name="BoardName" type="text" readonly />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="closeModal('boardDeleteModal')">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check"></i> Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
    <!-- Board  Edit Pop-up -->
    <div id="boardEditModal" class="modal-backdrop" aria-hidden="true">
        <div class="modal">
            <div class="modal-header">
                <h3>Edit Board</h3>
                <button class="modal-close" aria-label="Close" onclick="closeModal('boardEditModal')">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <form asp-controller="Board" asp-action="UpdateBoard" method="post" class="modal-body">
                <input type="hidden" id="EditBoardId" name="BoardId" value="" />
                <div class="form-group">
                    <label for="EditBoardName">Board Name</label>
                    <input id="EditBoardName" name="newTitle" type="text"  />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="closeModal('boardEditModal')">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check"></i> Edit
                    </button>
                </div>
            </form>
        </div>
    </div>
    <!-- Task Create Pop-up -->
    <div id="taskCreateModal" class="modal-backdrop" aria-hidden="true">
        <div class="modal">
            <div class="modal-header">
                <h3>New Task</h3>
                <button class="modal-close" aria-label="Close" onclick="closeModal('taskCreateModal')">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <form asp-controller="Task" asp-action="CreateTask" method="post" class="modal-body">
                <input type="hidden" id="CategoryId" name="CategoryId" value="@selectedCategory.Id" />
                <input type="hidden" id="BoardId" name="BoardId" value="@selectedBoard?.Id" />

                <div class="form-group">
                    <label for="TaskTitle">Task Title</label>
                    <input id="TaskTitle" name="Title" type="text" placeholder="Example: Task1, Task2, Task3..." required />
                    <label for="TaskDescription">Task Description</label>
                    <input id="TaskDescription" name="Description" type="text" placeholder="Example: Desc1, Desc2, Desc3..." required />
                    <label for="TaskTag">Task Tag</label>
                    <input id="TaskTag" name="Tag" type="text" placeholder="Example: Tag1, Tag2, Tag3..." required />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="closeModal('taskCreateModal')">Cancel</button>

                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check"></i> Create
                    </button>
                </div>
            </form>
        </div>
    </div>
    <!-- Task Delete Pop-up -->
    <div id="taskDeleteModal" class="modal-backdrop" aria-hidden="true">
        <div class="modal">
            <div class="modal-header">
                <h3>Delete Task</h3>
                <button class="modal-close" aria-label="Close" onclick="closeModal('taskDeleteModal')">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <form asp-controller="Task" asp-action="DeleteTask" method="post" class="modal-body">
                <input type="hidden" id="TaskDeleteCategoryId" name="CategoryId" value="@selectedCategory.Id" />
                <input type="hidden" id="TaskDeleteBoardId" name="BoardId" value="@selectedBoard?.Id" />
                <input type="hidden" id="TaskDeleteTaskItemId" name="TaskItemId" value="" />
                <div class="form-group">
                    <label for="TaskDeleteTitle">Task Title</label>
                    <input id="TaskDeleteTitle" name="Title" type="text" readonly />
                    <label for="TaskDeleteDescription">Task Description</label>
                    <input id="TaskDeleteDescription" name="Description" type="text" readonly />
                    <label for="TaskDeleteTag">Task Tag</label>
                    <input id="TaskDeleteTag" name="Tag" type="text" readonly />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="closeModal('taskDeleteModal')">Cancel</button>

                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check"></i> Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
    <!-- Task Edit Pop-up -->
    <div id="taskEditModal" class="modal-backdrop" aria-hidden="true">
        <div class="modal">
            <div class="modal-header">
                <h3>Edit Task</h3>
                <button class="modal-close" aria-label="Close" onclick="closeModal('taskEditModal')">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <form asp-controller="Task" asp-action="UpdateTask" method="post" class="modal-body">
                <input type="hidden" id="TaskEditCategoryId" name="CategoryId" value="@selectedCategory.Id" />
                <input type="hidden" id="TaskEditBoardId" name="BoardId" value="@selectedBoard?.Id" />
                <input type="hidden" id="TaskEditTaskItemId" name="TaskItemId" value="" />
                <div class="form-group">
                    <label for="TaskEditTitle">Task Title</label>
                    <input id="TaskEditTitle" name="Title" type="text"  />
                    <label for="TaskEditDescription">Task Description</label>
                    <input id="TaskEditDescription" name="Description" type="text"  />
                    <label for="TaskEditTag">Task Tag</label>
                    <input id="TaskEditTag" name="Tag" type="text"  />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="closeModal('taskEditModal')">Cancel</button>

                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check"></i> Edit
                    </button>
                </div>
            </form>
        </div>
    </div>
    

    <script>
        
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('open');
        }

        
        function closeModal(modalId) {
            const modal = document.getElementById(modalId);
            modal.classList.remove('open');
            modal.setAttribute('aria-hidden', 'true');
        }

        
        document.addEventListener("DOMContentLoaded", function () {
            const categoryModal = document.getElementById('categoryModal');
            const editModal = document.getElementById('editModal');
            const deleteModal = document.getElementById('deleteModal');
            const boardCreateModal = document.getElementById('boardCreateModal');
            const boardDeleteModal = document.getElementById('boardDeleteModal');
            const boardEditModal = document.getElementById('boardEditModal');
            const taskCreateModal=document.getElementById('taskCreateModal');
            const taskDeleteModal=document.getElementById('taskDeleteModal');
            const taskEditModal=document.getElementById('taskEditModal');

            
            window.openCategoryModal = function () {
                document.getElementById('CategoryName').value = '';
                categoryModal.classList.add('open');
                categoryModal.setAttribute('aria-hidden', 'false');
                setTimeout(() => document.getElementById('CategoryName').focus(), 50);
            };

            
            window.editCategory = function (categoryId, currentName) {
                document.getElementById('EditCategoryId').value = categoryId;
                document.getElementById('EditCategoryName').value = currentName;
                editModal.classList.add('open');
                editModal.setAttribute('aria-hidden', 'false');
                setTimeout(() => document.getElementById('EditCategoryName').focus(), 50);
            };
            window.deleteCategory = function (categoryId, currentName) {
                document.getElementById('DeleteCategoryId').value = categoryId;
                document.getElementById('DeleteCategoryName').value = currentName;
                deleteModal.classList.add('open');
                deleteModal.setAttribute('aria-hidden', 'false');
               
            };

            
            
            window.editBoard = function (boardId, currentName) {
                document.getElementById('EditBoardId').value = boardId;
                document.getElementById('EditBoardName').value = currentName;
                boardEditModal.classList.add('open');
                boardEditModal.setAttribute('aria-hidden', 'false');
