@using ToDo.Application.CQRS.Commands.UserCommands
@model RegisterUserCommand
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - ToDoApp</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="~/css/register.css">
</head>
<body>
    <div class="animated-bg"></div>

    <div class="floating-icons">
        <i class="fas fa-check-circle floating-icon"></i>
        <i class="fas fa-tasks floating-icon"></i>
        <i class="fas fa-bell floating-icon"></i>
        <i class="fas fa-calendar-check floating-icon"></i>
    </div>

    <div class="back-home">
        <a href="/">
            <i class="fas fa-arrow-left"></i>
            <span>Back to Home</span>
        </a>
    </div>

    <div class="register-container">
        <div class="register-card">
            <div class="brand">
                <div class="brand-icon">
                    <i class="fas fa-user-plus"></i>
                </div>
                <h2>Create Account</h2>
                <p class="subtitle">Join ToDoApp and boost your productivity</p>
            </div>
            @await Html.PartialAsync("_Notification")


            <form asp-action="Register" asp-controller="Account" method="post">
                <div class="input-box">
                    <label>Username</label>
                    <div class="input-wrapper">
                        <i class="fas fa-user input-icon"></i>
                        <input asp-for="Username" type="text" placeholder="Enter your name" />
                    </div>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="input-box">
                    <label>Email Address</label>
                    <div class="input-wrapper">
                        <i class="fas fa-envelope input-icon"></i>
                        <input asp-for="Email" type="email" placeholder="Enter your email" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="input-box">
                    <label>Password</label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock input-icon"></i>
                        <input asp-for="Password" type="password" placeholder="Create password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="input-box button">
                    <input type="submit" value="Create Account">
                </div>

                <div class="text">
                    <h3>Already have an account? <a href="/Account/Login">Sign in</a></h3>
                </div>
            </form>
        </div>
    </div>

    @section Scripts{
        @{
            <partial name="_ValidationScriptsPartial" />
        }
    }
</body>
</html>