@using ToDo.Application.CQRS.Queries.UserQueries
@model LoginUserQuery
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - ToDoApp</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
    <div class="animated-bg"></div>

    <div class="floating-icons">
        <i class="fas fa-check-circle floating-icon"></i>
        <i class="fas fa-tasks floating-icon"></i>
        <i class="fas fa-bell floating-icon"></i>
        <i class="fas fa-calendar-check floating-icon"></i>
    </div>

    <div class="back-home">
        <a href="/">
            <i class="fas fa-arrow-left"></i>
            <span>Back to Home</span>
        </a>
    </div>

    <div class="login-container">
        <div class="login-card">
            <div class="brand">
                <div class="brand-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <h2>Welcome Back</h2>
                <p class="subtitle">Sign in to continue to ToDoApp</p>
            </div>

            
            @await Html.PartialAsync("_Notification")

            <form asp-action="Login" asp-controller="Account" method="post">
                <div class="input-box">
                    <label>Email Address</label>
                    <div class="input-wrapper">
                        <i class="fas fa-envelope input-icon"></i>
                        <input asp-for="Email" type="email" placeholder="Enter your email" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="input-box">
                    <label>Password</label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock input-icon"></i>
                        <input asp-for="Password" type="password" placeholder="Enter your password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="input-box button">
                    <input type="Submit" value="Sign In">
                </div>

                <div class="text">
                    <p>Don't have an account? <a asp-controller="Account" asp-action="Register">Create Account</a></p>
                </div>
            </form>
        </div>
    </div>
</body>
</html>